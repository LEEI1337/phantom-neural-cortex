    "studentofjs": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-everything"
      ],
      "env": {}
    },
    "mcp-inspector": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/inspector"
      ],
      "env": {}
    },
    "copilot-cli": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "copilot-mcp-server"
      ],
      "env": {
        "COPILOT_MODEL": "claude-sonnet-4.5",
        "COPILOT_ALLOW_ALL_TOOLS": "false",
        "COPILOT_LOG_LEVEL": "warning"
